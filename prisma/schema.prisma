generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     Role     @default(USER)
  bookings Booking[]
}

model Tour {
  id      String        @id @default(uuid())
  name    String
  slug    String        @unique
  pricing TourPricing[]
  bookings Booking[]
}

model TourPricing {
  id           String   @id @default(uuid())
  pricingType  PricingType
  minGroupSize Int
  maxGroupSize Int
  price        Int
  isGroupPrice Boolean  @default(false)
  tourId       String
  tour         Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  tourId    String
  total     Int
  startDate DateTime
  endDate   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)
  tour Tour @relation(fields: [tourId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())

  @@index([tourId, startDate])
  @@index([userId, createdAt])
}

enum PricingType {
  joiner
  private
}

enum Role {
  USER
  ADMIN
}

